<div class="container">
  <div class="card">
    <h3 class="card-title"><%= @happy_memory.title %></h3>
    <div class="card-body">
      <p class="card-text"><strong>内容:</strong></p>
      <p class="card-text"><%= @happy_memory.content %></p>
      <p class="card-text"><strong>投稿日時:</strong> <%= @happy_memory.created_at.strftime("%Y-%m-%d %H:%M:%S") %></p>
      <div class="text-center">
        <a href="<%= happy_memories_path %>" class="btn btn-primary">
          <i class="fas fa-list"></i> 一覧へ戻る
        </a>
      </div>
    </div>
  </div>
</div>