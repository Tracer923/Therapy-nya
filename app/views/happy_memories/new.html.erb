<%= form_with(url: happy_memories_path, method: :post, class: "happy-form", model: @memory) do |form| %>
  <div class="form-group">
    <%= form.label :title, "タイトル", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :content, "内容", class: "form-label" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit "作成する", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="d-flex justify-content-center">
  <%= link_to "一覧へ", happy_memories_path, class: "btn btn-primary" %>
</div>