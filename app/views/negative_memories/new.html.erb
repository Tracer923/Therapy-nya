<%= form_with(url: negative_memories_path, method: :post, class: "negative-form", model: @memory) do |form| %>
  <div class="form-group">
    <%= form.label :title, "タイトル", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :content, "内容", class: "form-label" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit "作成する", class: "btn-negative btn-primary" %>
  </div>
<% end %>
