<div class="container">
  <h1>セラピーニャ ユーザー情報</h1>
  <table class="table">
    <thead>
      <tr>
        <th>名前</th>
        <th>メールアドレス</th>
        <th>思い出</th>
        <th>編集</th>
        <th>退会</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to "思い出", happy_memories_path(user), class: "btn btn-primary" %></td>
          <td><%= link_to "編集", edit_user_path(user), class: "btn btn-success" %></td>
          <td>
            <%= button_to "退会", user_path(user), method: :delete, data: { confirm: "本当に退会しますか？" }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>