<div class="container">
  <h1>ユーザー情報</h1>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">名前</h5>
      <p class="card-text"><%= @user.name %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <span class="font-weight-bold">メールアドレス:</span>
        <%= @user.email %>
      </li>
    </ul>
  </div>

  <div class="mt-4">
    <%= link_to "編集", edit_user_path(@user), class: "btn btn-primary mr-2" %>
    <%= button_to "退会", user_path(@user), method: :delete, data: { confirm: "本当に退会しますか？" }, class: "btn btn-danger" %>
  </div>
</div>
