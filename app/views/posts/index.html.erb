<% @posts.each do |post| %>
  <div>
    <h3><%= post.user.name %></h3>
    <p><%= post.content %></p>
  </div>
<% end %>

<%= form_with(model: @post, url: posts_path) do |form| %>
  <div>
    <%= form.text_area :content, name: "post[content]" %>
  </div>
  <div>
    <%= form.submit "投稿する" %>
  </div>
<% end %>